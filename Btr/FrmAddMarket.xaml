<Window x:Class="Btr.FrmAddMarket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Btr"
        mc:Ignorable="d"
        Title="FrmAddMarket" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="2"/>
                </Style>
            </StackPanel.Resources>
            <TextBox Name="txtMarketName"/>
            <StackPanel Orientation="Horizontal">
                <Button Name="btnAdd" Content="+" Click="BtnAdd_OnClick" Width="20"/>
                <Button Name="btnRemove" Content="-" Click="BtnRemove_OnClick" Width="20"/>
            </StackPanel>
            
            <ListView Name="lvMarkets" ItemsSource="{Binding Source={x:Static local:Markets.MarketList}, Path=Values}" DisplayMemberPath="Name">
                
            </ListView>
            <Button Name="btnSave" Content="Сохранить" Click="BtnSave_OnClick"/>
        </StackPanel>
        
    </Grid>
</Window>
