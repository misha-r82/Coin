<Window x:Class="Btr.FrmTreaderEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Btr"
        mc:Ignorable="d">
<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Market"/>
        <ComboBox Name="cbMarket" DisplayMemberPath="Name"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Balance"/>
        <TextBox Text="{Binding Balance}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Division"/>
        <TextBox Text="{Binding PartsInvest}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Delta"/>
        <TextBox Text="{Binding PartsInvest}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Gap"/>
        <TextBox Text="{Binding GGap}"/>
    </StackPanel>
    </StackPanel>
</Window>
